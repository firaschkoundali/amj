            }

            .social-link {
                width: 36px;
                height: 36px;
                font-size: 16px;
            }

            /* Main Content */
            .main {
                padding-top: 70px;
            }

            /* Scroll Top Button */
            .scroll-top {
                width: 40px;
                height: 40px;
                bottom: 20px;
                right: 15px;
                font-size: 18px;
            }
        }

        @media (max-width: 575px) {
            .header {
                padding: 8px 0;
            }

